<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RingerActivity">

    <ImageView
        android:id="@+id/ringer_mode"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ringer_icon"/>

    <ImageView
        android:id="@+id/vibration_mode"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/ringer_mode"
        app:layout_constraintTop_toTopOf="@id/ringer_mode"
        android:layout_marginStart="50dp"
        android:src="@drawable/vibration_icon"/>

    <ImageView
        android:id="@+id/silent_mode"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/vibration_mode"
        app:layout_constraintTop_toTopOf="@id/ringer_mode"
        android:layout_marginStart="50dp"
        android:src="@drawable/mute_icon"/>

    <TextView
        android:id="@+id/current_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ringer_mode"
        android:layout_marginTop="180dp"
        tools:text="@string/ring_mode"
        android:textColor="@color/black"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>